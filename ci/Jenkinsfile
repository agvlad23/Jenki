pipeline {
    agent any
    
environment {
    someVar="${env.envTest}"
    someVar2 = "${env.envTest2}"
    someVar3="${env.envTest3}"
}
    stages {
        stage('stage one') {
            steps {
                      configFileProvider(
        [configFile(fileId: 'ab3f322a-2589-4d3d-b849-6b8052a11247',variable: 'envPath')]) {
   echo " =========== ^^^^^^^^^^^^ Reading config from pipeline script "
            sh "cat ${env.envPath}"
            
                          sh "cp ${env.envPath} .env" 
            echo " =========== ~~~~~~~~~~~~ ============ "
    }
                echo someVar
            }
        }
        stage('stage two') {
            steps {
                
                echo "${env.envTest2}"
                sh "cat .env"
                echo someVar3
            }
        }
    }
}
